<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= username %>, Wind</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/frontend/CSS/discord-embeds.css">
    <link rel="icon" href="/frontend/logo/wind_logo.ico" type="image/x-icon" />
    <link rel="stylesheet" href="/frontend/CSS/getUserGuilds2.css">
    <script src="https://kit.fontawesome.com/2c10079fa4.js" crossorigin="anonymous"></script>
</head>

<body>
    <div class="container">
        <a href="/servers" class="btn btn-primary">Back</a> <br><br>
        <a href="/" class="btn btn-primary">Back to Home</a> <br><br>
        <br><br>
        <br><br>
    </div>

    <div class="container">
        <form onclick="SubmitEvent" action="/servers/<%= guild.id %>/logi" method="post">
            <div class="form-group">
                <h2>Logging options:</h2>
                <label for="logDisabled">Logging:</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="logEnabled" name="logEnabled" value="true">
                    <label class="form-check-label" for="logEnabled">Enable</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="logDisabled" name="logEnabled" value="false" checked>
                    <label class="form-check-label" for="logDisabled">Disable</label>
                </div>
            </div>

            <select id="channelIdLogi" name="channelid" class="form-control">
                <% channels.forEach(channel=> { %>
                <option value="<%= channel.id %>">
                    <%= channel.name %> (ID: <%= channel.id %>)
                </option>
                <% }) %>
            </select>

            <div class="form-group">
                <label for="events">Select Events:</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="selectAll" name="selectAll">
                    <label class="form-check-label" for="selectAll">Select/Deselect All</label><br>

                    <input class="form-check-input" type="checkbox" id="channelCreation" name="events" value="channelCreation">
                    <label class="form-check-label" for="channelCreation">Channel Creation</label><br>

                    <input class="form-check-input" type="checkbox" id="channelDeletion" name="events" value="channelDeletion">
                    <label class="form-check-label" for="channelDeletion">Channel Deletion</label><br>

                    <input class="form-check-input" type="checkbox" id="channelUpdate" name="events" value="channelUpdate">
                    <label class="form-check-label" for="channelUpdate">Channel Update</label><br>

                    <input class="form-check-input" type="checkbox" id="memberJoin" name="events" value="memberJoin">
                    <label class="form-check-label" for="memberJoin">Member Join</label><br>

                    <input class="form-check-input" type="checkbox" id="memberLeave" name="events" value="memberLeave">
                    <label class="form-check-label" for="memberLeave">Member Leave</label><br>

                    <input class="form-check-input" type="checkbox" id="memberUpdate" name="events" value="memberUpdate">
                    <label class="form-check-label" for="memberUpdate">Member Update</label><br>

                    <input class="form-check-input" type="checkbox" id="roleCreation" name="events" value="roleCreation">
                    <label class="form-check-label" for="roleCreation">Role Creation</label><br>

                    <input class="form-check-input" type="checkbox" id="roleDeletion" name="events" value="roleDeletion">
                    <label class="form-check-label" for="roleDeletion">Role Deletion</label><br>

                    <input class="form-check-input" type="checkbox" id="roleUpdate" name="events" value="roleUpdate">
                    <label class="form-check-label" for="roleUpdate">Role Update</label><br>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</body>

</html>
